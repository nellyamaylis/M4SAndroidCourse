<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nellya.zohounnellyamidterm.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/image_conv">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/miles"
        android:id="@+id/txtMiles"
        android:textColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editValeur"
        android:layout_below="@+id/txtMiles"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtMiles"
        android:layout_alignEnd="@+id/txtMiles"
        android:textColor="@color/accent_material_dark"
        android:textIsSelectable="false"
        android:background="@color/background_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kilometers"
        android:id="@+id/txtKm"
        android:layout_below="@+id/txtResult"
        android:layout_alignLeft="@+id/txtResult"
        android:layout_alignStart="@+id/txtResult"
        android:textColor="@color/background_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/messageconvert"
        android:id="@+id/textView3"
        android:layout_below="@+id/editValeur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/background_material_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnconvertir"
        android:id="@+id/BtnConvert"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/r_sultat"
        android:id="@+id/txtResult"
        android:layout_alignBottom="@+id/BtnConvert"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:textColor="@color/accent_material_dark"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
